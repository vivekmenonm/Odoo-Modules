		</record>

		<record model="ir.ui.view" id="view_task_form2_inherited_productivity">
			<field name="name">project.task.form.inherited.productivity</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2" />
			<field name="arch" type="xml">

				<field name="user_id" position="after">
					<field name="productivity" />
				</field>

			</field>
		</record>

		<record id="edit_project_inherit_productivity" model="ir.ui.view">
			<field name="name">project.project.form.inherit.productivity</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project" />
			<field name="arch" type="xml">

